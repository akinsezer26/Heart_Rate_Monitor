<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/arka"
    >


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:fontFamily="cursive"
            android:text="Online Nabız"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:fontFamily="cursive"
            android:text="Takibi"
            android:textAlignment="center"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/Login_Email"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textPersonName"
            android:textColor="@android:color/background_dark" />

        <EditText
            android:id="@+id/LoginSifre"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignLeft="@+id/Login_Email"
            android:layout_alignStart="@+id/Login_Email"
            android:layout_below="@+id/Login_Email"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Şifre"
            android:inputType="textPersonName"
            android:textColor="@android:color/background_dark" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/LoginSifre"
                android:layout_alignStart="@+id/LoginSifre"
                android:layout_below="@+id/LoginSifre"
                android:layout_weight="1"
                android:text="Hesabın yok mu? "
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/TVHesapOlustur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button3"
                android:layout_toEndOf="@+id/textView7"
                android:layout_toRightOf="@+id/textView7"
                android:layout_weight="1"
                android:text=" Hemen oluştur"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignLeft="@+id/LoginSifre"
            android:layout_alignStart="@+id/LoginSifre"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="36dp"
            android:background="@android:drawable/gallery_thumb"
            android:backgroundTint="@android:color/darker_gray"
            android:elevation="0dp"
            android:onClick="GirisYap"
            android:text="Giriş Yap"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
